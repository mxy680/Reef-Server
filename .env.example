# OpenRouter API Key - Required for PDF reconstruction (Gemini via OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# DeepInfra API Key - Required for Kokoro TTS
DEEPINFRA_API_KEY=your_deepinfra_api_key_here

# Mathpix API - Required for handwriting transcription (optional, skipped if missing)
MATHPIX_APP_ID=your_mathpix_app_id_here
MATHPIX_APP_KEY=your_mathpix_app_key_here

# Groq API Key - Required for voice transcription (Whisper)
GROQ_API_KEY=your_groq_api_key_here

# Environment (development or production)
ENVIRONMENT=development
